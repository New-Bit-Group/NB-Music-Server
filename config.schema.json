{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "port": {
      "type": "integer",
      "description": "服务器运行端口",
      "minimum": 1,
      "maximum": 65535,
      "default": 5000
    },
    "database": {
      "type": "object",
      "description": "数据库配置",
      "default": {
        "sqlite": {
          "path": "./data/data.db"
        }
      },
      "anyOf": [
        {
          "required": [
            "mysql"
          ]
        },
        {
          "required": [
            "sqlite"
          ]
        }
      ],
      "properties": {
        "mysql": {
          "type": "object",
          "description": "MySQL 数据库配置",
          "required": [
            "host",
            "user",
            "password",
            "database"
          ],
          "properties": {
            "host": {
              "type": "string"
            },
            "port": {
              "type": "integer",
              "minimum": 1,
              "maximum": 65535,
              "default": 3306
            },
            "user": {
              "type": "string"
            },
            "password": {
              "type": "string"
            },
            "database": {
              "type": "string"
            }
          }
        }
      },
      "sqlite": {
        "type": "object",
        "description": "SQLite 数据库配置",
        "properties": {
          "path": {
            "type": "string",
            "default": "./data/data.db"
          }
        }
      }
    },
    "cacheDatabase": {
      "type": "object",
      "description": "缓存数据库配置",
      "default": {
        "sqlite": {
          "path": "./data/cache.db"
        }
      },
      "anyOf": [
        {
          "required": [
            "redis"
          ]
        },
        {
          "required": [
            "sqlite"
          ]
        }
      ],
      "properties": {
        "redis": {
          "type": "object",
          "description": "Redis 缓存数据库配置",
          "required": [
            "host"
          ],
          "properties": {
            "host": {
              "type": "string"
            },
            "port": {
              "type": "integer",
              "minimum": 1,
              "maximum": 65535,
              "default": 6379
            },
            "username": {
              "type": "string"
            },
            "password": {
              "type": "string"
            },
            "db": {
              "type": "integer",
              "minimum": 0,
              "maximum": 15,
              "default": 0
            }
          }
        },
        "sqlite": {
          "type": "object",
          "description": "SQLite 缓存数据库配置",
          "properties": {
            "path": {
              "type": "string",
              "default": "./data/cache.db"
            }
          }
        }
      }
    },
    "administrators": {
      "anyOf": [
        {
          "type": "array"
        },
        {
          "type": "boolean"
        }
      ],
      "description": "管理员列表",
      "default": false,
      "items": {
        "type": "number",
        "description": "管理员B站UID"
      }
    },
    "speedLimit": {
      "type": "object",
      "description": "速度限制配置",
      "default": {
        "maxSpeed": 75,
        "banDuration": 60
      },
      "properties": {
        "maxSpeed": {
          "type": "integer",
          "description": "访问速率限制，单位：次/分钟",
          "default": 75
        },
        "banDuration": {
          "type": "integer",
          "description": "封禁时长，单位：秒",
          "default": 60
        }
      }
    },
    "webhook": {
      "type": "object",
      "description": "Webhook 配置",
      "required": [
        "secret"
      ],
      "properties": {
        "secret": {
          "type": "string",
          "description": "Webhook 密钥"
        }
      }
    }
  }
}